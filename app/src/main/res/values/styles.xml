<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleButtonTitle14</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="StyleButtonTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
    </style>

    <style name="StyleCapitalText" parent="StyleButtonTitle14">
        <item name="android:textColor">@color/capital_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleCardCapitalText" parent="StyleCapitalText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyleDescriptionText">
        <item name="android:textColor">@color/description_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>